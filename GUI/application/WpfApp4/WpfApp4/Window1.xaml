<Window x:Class="WpfApp4.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="Sum Calculation" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Enter No1" Grid.Column="0" Grid.Row="0" FontSize="30" />
        <TextBox x:Name="txtNo1" Grid.Column="1" Grid.Row="0" FontSize="30"/>
        <TextBlock Text="Enter No2" Grid.Column="0" Grid.Row="1" FontSize="30"/>
        <TextBox x:Name="txtNo2" Grid.Column="1" Grid.Row="1" FontSize="30" />
        <TextBlock Text="Sum" Grid.Column="0" Grid.Row="2" FontSize="30" />
        <TextBox x:Name="txtSum" Grid.Column="1" Grid.Row="2" FontSize="30" />
        <TextBlock Text="Average" Grid.Column="0" Grid.Row="3" FontSize="30"/>
        <TextBox x:Name="txtAvg" Grid.Column="1" Grid.Row="3" FontSize="30"/>
        <Button x:Name="btnCalculate" Content="Calculate" FontSize="30" Grid.Column="0" Grid.Row="4" Click="btnCalculate_Click"/>
        <Button x:Name="btnClose" Content="Close" FontSize="30" Grid.Column="1" Grid.Row="4" Click="btnClose_Click" />
    </Grid>
</Window>
